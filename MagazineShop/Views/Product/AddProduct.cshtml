@model AddProduct
<h3>Добавление продукта</h3>
<div class="row mb-5">
    <form asp-action="AddProduct" class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <div class="col-14">
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <div class="col-14">
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Manufacturer"></label>
            <div class="col-14">
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Img"></label>
            <div class="col-14">
                <input asp-for="Img" class="form-control" />
                <span asp-validation-for="Img" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Class"></label>
            <div class="col-14">
                <input asp-for="Class" class="form-control" />
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
        </div>

        <input class="btn btn-success" type="submit" value="Добавить продукт" />
    </form>
</div>
