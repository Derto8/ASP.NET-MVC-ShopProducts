@model Product

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Img" alt="@Model.Name" />
    <h2>@Model.Name</h2>
    @{
        double price = Model.Price;
        double priceSale = Model.GetDiscountPrice(Model);
    }
    @if(price != priceSale){
        <p>Цена: <s>@price.ToString("c")</s>, @priceSale.ToString("c"), скидка @Model.GetSale(Model)%</p>
    }
    else{
        <p>Цена: @Model.GetDiscountPrice(Model).ToString("c")</p>
    }
    <p>Производитель: @Model.Manufacturer</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.Id">Добавить в корзину</a></p>
</div>